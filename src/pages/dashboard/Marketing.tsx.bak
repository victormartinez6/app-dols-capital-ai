                          selectedFiles.forEach(file => {
                            const validationError = validateFile(file, 'artes');
                            if (validationError) {
                              setError(`Erro em ${file.name}: ${validationError}`);
                              hasError = true;
                            }
                          });
                          
                          if (!hasError) {
                            setMultipleFiles(selectedFiles);
                            setError(null);
                          }
                        }
                      }}
                    />
                  )}
